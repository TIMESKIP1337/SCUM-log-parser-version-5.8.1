# ============================================
# Discord Bot Configuration
# ============================================
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here

# Ticket System
TICKET_CHANNEL_ID=your_ticket_channel_id
TICKET_THUMBNAIL_URL=
TICKET_IMAGE_URL=https://example.com/your_image.png
TICKET_FOOTER_ICON_URL=https://example.com/your_footer_icon.png

# ============================================
# Remote Connection Configuration (FTP/SFTP)
# ============================================
# Protocol Options:
#   SFTP - SSH File Transfer Protocol (Port 22, recommended)
#   FTP  - File Transfer Protocol (Port 21, with optional TLS)

PROTOCOL=FTP
FTP_HOST=your_server_ip
FTP_PORT=22
FTP_USER=your_username
FTP_PASSWORD=your_password
LOGS_PATH=/path/to/your/logs/

# FTP/FTPS Mode Settings (only when PROTOCOL=FTP)
# FTP_FORCE_TLS=true    # Force Explicit FTPS (TLS) mode - Recommended for security
# FTP_FORCE_PLAIN=true  # Force plain FTP mode (no encryption) - Not recommended
# If both are false/unset: Auto mode (try plain first, then TLS)

# ============================================
# Local Configuration (Alternative to Remote)
# ============================================
# Uncomment one of these if using local files instead of remote:
# LOCAL_LOGS_PATH=C:\\Users\\YourName\\Logs
# LOCAL_LOGS_PATH=C:/Users/YourName/Logs

# ============================================
# Discord Channel IDs - Kill Feed
# ============================================
KILL_CHANNEL_ID=your_killfeed_channel_id
KILL_COUNT_CHANNEL_ID=your_killcount_channel_id

# ============================================
# Discord Channel IDs - Lockpick
# ============================================
LOCKPICK_CHANNEL_ID=your_lockpick_channel_id
LOCKPICK_RANKING_CHANNEL_ID=your_lockpick_ranking_channel_id

# ============================================
# Discord Channel IDs - General Logs
# ============================================
LOGIN_CHANNEL_ID=your_login_log_channel_id
ECONOMY_CHANNEL_ID=your_economy_log_channel_id
TRAP_CHANNEL_ID=your_trap_log_channel_id

# ============================================
# Discord Channel IDs - Detailed Logs
# ============================================
LOGS_ECONOMY_NAME_CHANNEL_ID=your_namechange_channel_id
LOGS_ECONOMY_BANK_CHANNEL_ID=your_bank_channel_id
LOGS_VEHICLE_DESTRUCTION_CHANNEL_ID=your_vehicle_destruction_channel_id
LOGS_CHEST_OWNERSHIP_CHANNEL_ID=your_chest_ownership_channel_id
LOGS_GAMEPLAY_CHANNEL_ID=your_gameplay_channel_id
LOGS_VIOLATIONS_CHANNEL_ID=your_violations_channel_id

# ============================================
# Discord Channel IDs - Admin Module
# ============================================
ADMIN_CHANNEL_ID=your_admin_channel_id
ADMIN_PUBLIC_CHANNEL_ID=your_admin_public_channel_id

# ============================================
# Discord Channel IDs - Chat Module
# ============================================
CHAT_CHANNEL_ID=your_chat_channel_id
CHAT_GLOBAL_CHANNEL_ID=your_global_chat_channel_id

# ============================================
# Weapon Images Configuration
# ============================================
WEAPONS_FOLDER=weapons_images
DEFAULT_WEAPON_IMAGE=https://example.com/default_weapon.png

# ============================================
# General Settings
# ============================================
CHECK_INTERVAL=1
KILLFEED_CHECK_INTERVAL=1
ENABLE_FILE_WATCHER=true

# ============================================
# Performance Settings
# ============================================
# Adjust based on your system RAM:
# 8GB RAM:  CACHE_CAPACITY=100000, MAX_MEMORY_MB=2048
# 16GB RAM: CACHE_CAPACITY=250000, MAX_MEMORY_MB=4096
# 32GB RAM: CACHE_CAPACITY=500000, MAX_MEMORY_MB=8192

CACHE_CAPACITY=250000
MAX_MEMORY_MB=4096
MAX_GOROUTINES=128

# ============================================
# Connection Pool Settings
# ============================================
# SFTP Multi-Pool (Parallel Connections)
SFTP_POOL_SIZE=16

# FTP Multi-Pool (Parallel Connections)
FTP_POOL_SIZE=16

# ============================================
# Batch Sender Settings
# ============================================
MAX_TOTAL_MESSAGES=5000
MAX_TOTAL_EMBEDS=2500
BATCH_FLUSH_INTERVAL=1
MAX_BATCH_SIZE=8
MESSAGE_DELAY_MS=50

# ============================================
# Rate Limiting
# ============================================
MAX_MESSAGES_PER_MINUTE=150

# ============================================
# Auto Restart
# ============================================
AUTO_RESTART_ON_ERROR=true
MAX_RESTART_ATTEMPTS=3

# ============================================
# Batch Processing
# ============================================
BATCH_SIZE=10
STREAM_RATE_LIMIT=10
LARGE_FILE_THRESHOLD_MB=50
MAX_PROCESS_PER_BATCH=10000
ENABLE_ADAPTIVE_BATCHING=true
LARGE_BATCH_CHUNK_SIZE=100

# ============================================
# Monitoring & Maintenance
# ============================================
CACHE_SAVE_INTERVAL=5
PROGRESS_REPORT_INTERVAL=1000
MAX_MEMORY_USAGE_PCT=80

# ============================================
# GC Settings
# ============================================
# Adjust GOMEMLIMIT based on your RAM:
# 8GB RAM:  GOMEMLIMIT=2560MiB
# 16GB RAM: GOMEMLIMIT=5120MiB
# 32GB RAM: GOMEMLIMIT=10240MiB

GOGC=100
GOMEMLIMIT=5120MiB
